/* pages/profile/profile.wxss */

.profile {
  display: flex;
  justify-content: space-between;
  margin: 50rpx 25rpx 45rpx 25rpx;
}

.profile-img-name {
  width: 20%;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  line-height: 100rpx;
}

.profile-img {
  width: 100rpx;
  height: 100rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 10rpx;
}

.set {
  width: 120rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  background-color: #d81e06;
  border-radius: 45rpx;
  color: #fff;
  font-size: 25rpx;
  margin-top: 30rpx;
}

/* 按钮 */
.profile .van-button--normal{
  border:none;
  padding: 0;
}

.panel-swich{
  display: flex;
  justify-content: space-between;
  padding: 0 15px;
  height: 65px;
}
.panel-left{
  display: flex;
  justify-content: space-between;
  height: 65px;
}
/* 开关 */
.van-switch{
  margin-top:17px;
  font-size: 25px!important;
}

.van-panel{text-align: left;}

.icon-img{
  width: 24px;
  height: 24px;
  margin: 22px 15px 0 0;
}

.panel-swich .van-cell{
  padding:10px 30px 10px 0;
}
.body .van-panel2{
  padding:10px 100px 10 0;
}

.giveback{
  color:#333;
  font-size: 14px;
  line-height: 65px;
}

/* 返回 */
.nav-bar .van-nav-bar__text{
  margin: 0;
  color:#d81e06;
  font-size: 16px;
}
.van-icon{
  color:#d81e06!important;
}
.van-nav-bar{padding-top: 0!important;}


/* 右滑面板 */
.van-popup{
  width: 100%;
  height: 100%;
}

/* 右滑 */
.set-wh{
  width: 100%;
  height:100%;
  position: fixed;
  top:0;left: 0;
  z-index: 999;
  border:1px solid #f00;
}


.set-img {
  display: inline-block;
  width: 27rpx;
  height: 27rpx;
  margin:0 10rpx 6rpx 0;
  vertical-align:middle;
}

/* 覆盖组件样式 */
.mytabs .van-tabs__wrap{
  width: 30%;
  margin:0 auto;
}

.mytabs{text-align: center;}

.mytab image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 200rpx;
}

.tab-font{
  font-size: 25rpx;
  color:#555;
  text-align: center;
}

