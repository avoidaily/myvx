/* pages/newsChannel/newsChannel.wxss */
/* 公用样式 */
@import "../../style/commom.wxss"


/* 顶部 */
.channel-nav{
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
}
/* 右侧 */
.channel-name{
  font-weight: bold;
  color: #333;
  text-align: center;
  position:fixed;
  z-index:1;
  background-color:#fff;
  width:100%;
}
/* 导航栏 */
.van-tabs__wrap{
  background: #f5f7f9!important;
  position:fixed!important;
  top:100rpx!important;
  /* left:0!important; */

}
/* 下拉菜单 */
.wap-channel-nav .van-tab--active{
  color:#d81e06;
  font-size:35rpx;
}
.wap-channel-nav .van-tab{
  font-size: 35rpx;
  flex: none;
  padding: 0 30rpx;
}
.wap-channel-nav .van-tabs__line{
  width: 35rpx!important;
  margin-left: 14rpx;
}

/* 首页内容 */
.tab-content{
  width: 100%;
  height: auto;
}
/* 轮播 */
.swiper{
  width: 100%;
  height: 420rpx;
}
.section-focus{
  margin: 0 auto;
  width: 100%;
  height: 420rpx;
  position: relative;
  overflow: hidden;
}
.focus-img{
  width: 100%;
  height: 400rpx;
}
.focus-title{
  position: absolute;
  bottom: 0;left: 0;
  color: #fff;
  width: 86%;
  height: 96rpx;
  font-size: 39rpx;
  padding: 0 10% 0 4%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.history{
  margin-bottom: 30rpx;
}





